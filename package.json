{
  "name": "style-gaiden",
  "version": "1.0.0",
  "description": "Styleguide for GetNinjas projects",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "config": "npm set progress=false && exit 1",
    "clear": "rm -rf ./dist/*",
    "sass": "node-sass --output-style compressed -o ./dist/stylesheets/ --include-path ./src/sass/ --source-map true -r ./src/sass/ ./dist/stylesheets/ninja-gaiden.css",
    "cssnano": "cssnano --replace true --autoprefixer.browsers \"> 0.1% in BR, not ie 8\" --safe --sourcemap ./dist/stylesheets/ninja-gaiden.css ./dist/stylesheets/ninja-gaiden.min.css",
    "mqpacker": "mqpacker -s ./dist/stylesheets/ninja-gaiden.min.css ./dist/stylesheets/ninja-gaiden.min.css",

    "babel": "babel --babelrc true -d ./dist/javascripts ./src/javascripts",
    "lint": "eslint ./src/javascripts",
    "uglify": "uglifyjs ./dist/javascripts/*.js -o ./dist/javascripts/app.js",

    "build:css": "npm run clear && npm run sass && npm run cssnano && npm run mqpacker",
    "build:js": "npm run lint && npm run babel"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/getninjas/ninja-gaiden.git"
  },
  "keywords": [
    "styleguide",
    "css"
  ],
  "author": "GetNinjas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/getninjas/ninja-gaiden/issues"
  },
  "homepage": "https://github.com/getninjas/ninja-gaiden#readme",
  "devDependencies": {
    "autoprefixer": "^6.5.0",
    "babel-cli": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "css-mqpacker": "^5.0.1",
    "cssnano-cli": "^1.0.5",
    "eslint": "^3.7.1",
    "node-sass": "^3.10.1",
    "postcss-cli": "^2.6.0"
  }
}
